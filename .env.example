
# SmartCare PRO Environment Configuration
# Copy to .env and configure for your environment

# === REQUIRED CONFIGURATION ===
DATABASE_URL="postgresql://username:password@localhost:5432/smartcare_pro"
SESSION_SECRET="your-secure-random-session-secret-here-min-32-chars"

# === AI SERVICES (OPTIONAL) ===
# For clinical decision support and analysis
ANTHROPIC_API_KEY="sk-ant-api03-your-key-here"  # Format: sk-ant-api03-...
PERPLEXITY_API_KEY="pplx-your-key-here"         # Format: pplx-...

# === AI CONFIGURATION ===
MODEL="claude-3-7-sonnet-20250219"              # Recommended: claude-3-7-sonnet-20250219, claude-3-opus-20240229
PERPLEXITY_MODEL="sonar-pro"                     # Use "sonar" if you don't have pro access
MAX_TOKENS=64000                                 # Maximum tokens for AI responses
TEMPERATURE=0.2                                  # 0.0-1.0, lower = more focused responses

# === SERVER CONFIGURATION ===
NODE_ENV="development"                           # development | production
PORT=5000                                        # Server port (use 5000 for Replit)
DEBUG=false                                      # Enable debug logging
LOG_LEVEL="info"                                # debug | info | warn | error

# === CLINICAL DECISION SUPPORT ===
DEFAULT_SUBTASKS=5                              # Default number of subtasks when expanding
DEFAULT_PRIORITY="medium"                       # high | medium | low
PROJECT_NAME="SmartCare PRO"                    # Project name for task metadata

# === DEVELOPMENT OVERRIDES ===
# Uncomment for development-specific settings
# BYPASS_AUTH=true                              # Skip authentication (DEV ONLY)
# MOCK_AI_RESPONSES=true                        # Use mock AI responses (DEV ONLY)
# DISABLE_CLINICAL_RULES=false                  # Disable clinical decision support


# Required
ANTHROPIC_API_KEY=your-api-key-here  # For most AI ops -- Format: sk-ant-api03-... (Required)
PERPLEXITY_API_KEY=pplx-abcde        # For research -- Format: pplx-abcde (Optional, Highly Recommended)

# Optional - defaults shown
MODEL=claude-3-7-sonnet-20250219  # Recommended models: claude-3-7-sonnet-20250219, claude-3-opus-20240229 (Required)
PERPLEXITY_MODEL=sonar-pro        # Make sure you have access to sonar-pro otherwise you can use sonar regular (Optional)
MAX_TOKENS=64000                   # Maximum tokens for model responses (Required)
TEMPERATURE=0.2                   # Temperature for model responses (0.0-1.0) - lower = less creativity and follow your prompt closely (Required)
DEBUG=false                       # Enable debug logging (true/false)
LOG_LEVEL=info                    # Log level (debug, info, warn, error)
DEFAULT_SUBTASKS=5                # Default number of subtasks when expanding
DEFAULT_PRIORITY=medium           # Default priority for generated tasks (high, medium, low)
PROJECT_NAME={{projectName}}      # Project name for tasks.json metadata